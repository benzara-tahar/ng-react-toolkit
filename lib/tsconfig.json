{
   "compilerOptions": {
      "target": "ES5",
      "module": "CommonJS",
      "lib": [
         "DOM",
         "ES2015"
      ],
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "types": [
         "angular",
         "jest",
         "node",
         "angular-mocks"
      ],
       "jsx": "react",
      "typeRoots": ["./node_modules/@types"]
   },
   "include": ["src", "src/**/*.spec.ts", "src/**/*.test.ts", "jest.config.ts"],
   "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/*.spec.tsx",
      "**/*.test.tsx",
      "**/__tests__/*",
      "jest.config.ts"
   ]
}