{
   "name": "ng-react-toolkit-monorepo",
   "private": true,
   "scripts": {
      "build": "pnpm -r build",
      "build:lib": "pnpm --filter ng-react-toolkit build",
      "dev": "pnpm -r dev",
      "test": "pnpm -r test",
      "docs": "pnpm --filter ng-react-toolkit-docs start",
      "docs:build": "pnpm --filter ng-react-toolkit-docs build",
      "docs:serve": "pnpm --filter ng-react-toolkit-docs serve",
      "docs:start": "pnpm --filter ng-react-toolkit-docs start",
      "examples:basic-webpack": "pnpm --filter ng-react-toolkit-examples:basic-webpack start",
      "publish": "cd lib && npm pack --dry-run &&  npm publish"
   },
   "devDependencies": {
      "typescript": "^5.0.0"
   }
}